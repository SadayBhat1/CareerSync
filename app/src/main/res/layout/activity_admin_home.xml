<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#0288D1">

            <!-- Logo -->

            <!-- Title -->

            <ImageView
                android:id="@+id/logo"
                android:layout_width="75dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26dp"
                android:layout_marginBottom="54dp"
                android:src="@drawable/kle_logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="284dp"
                android:layout_height="57dp"
                android:layout_alignTop="@+id/title"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="63dp"
                android:layout_toRightOf="@id/logo"
                android:text="BCA Placements"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

        </RelativeLayout>


        <!-- Grid Layout -->

        <!-- Add Student Button -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@id/rl_header"
            android:layout_marginTop="-4dp"
            android:columnCount="2"
            android:rowCount="3">


            <!-- Add Student -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addstudent"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="AddStudent"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/add_student" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Add Student"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Add Notification -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addnotif"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="AddNotification"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/notify2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Notify"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Add Company -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addcompany"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="AddCompany"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/companypic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Add Company"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Remove Company -->
            <androidx.cardview.widget.CardView
                android:id="@+id/removecompany"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="RemoveCompany"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/remove_company_minus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:gravity="center"
                        android:text="Remove Company"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Previous Papers -->
            <androidx.cardview.widget.CardView
                android:id="@+id/previouspapers"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="PreviousPapers"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/paperpic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="Papers"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Selected Students -->
            <androidx.cardview.widget.CardView
                android:id="@+id/selectedstudents"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:background="@drawable/shape_login_panel"
                android:clickable="true"
                android:onClick="SelectedStudents"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="87dp"
                        android:layout_height="87dp"
                        android:src="@drawable/graduated" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11sp"
                        android:text="Selected"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Logout Button
        <Button
            android:id="@+id/logout_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="756dp"
            android:background="#E10600"
            android:onClick="LogoutAdmin"
            android:text="Logout"
            android:textColor="#ffffff"
            android:textSize="18sp" /> -->

    </RelativeLayout>

</ScrollView>
